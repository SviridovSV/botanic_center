- if current_user.orders.any?
  %main.container.general-main-wrap
    %h1.mt-0.mb-25 My Orders
    = render "sort_dropdown"
    .visible-xs
      = render "mobile_orders"
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th
              %span.in-grey-600 Number
            %th
              %span.in-grey-600 Completed at
            %th
              %span.in-grey-600 Status
            %th
              %span.in-grey-600 Total
        %tbody
          = render "orders"
- else
  %h1.text-center You do not have any orders.
  %h1.text-center= link_to "Go to Shop", category_path(1), class: 'in-gold-500'