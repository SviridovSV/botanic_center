.row
  .col-sm-6
    .product-gallery
      .mb-20
        %img.img-responsive{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
      .images.clearfix
        %a.img-link{href: "#"}
          %img.width-full{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
        %a.img-link{href: "#"}
          %img.width-full{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
        %a.img-link{href: "#"}
          %img.width-full{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
  .col-sm-6
    %h1.mt-res-0= @book.title
    %p.in-grey-600.small= book_authors(@book)
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10= shifting_price_to_currency(@book)
      .col-xs-5.col-md-3
        .input-group.general-position
          %a.input-link{href: "#"}
            %i.fa.fa-minus.line-height-40
          %input.form-control.quantity-input{type: "text"}
          %a.input-link{href: "#"}
            %i.fa.fa-plus.line-height-40
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position{:class => "#{"disabled" unless book.in_stock?}"} Add to Cart
    .card
      %p Description
      %p.in-grey-600.small.line-height-2{id: "short_desc"}
        = book_description(@book)
      %p.in-grey-600.small.line-height-2{style: "display: none", id: "full_desc"}
        = @book.description
        = link_to "Hide", "#", class: "in-gold-500 ml-10", id: "read_link"
    .card
      .clearfix
        %p.general-item-info.pull-right= @book.year
        %p.break-word Year of publication
    .card
      .clearfix
        %p.general-item-info.pull-right= book_dimensions(@book)
        %p.break-word Dimensions
    .card
      .clearfix
        %p.general-item-info.pull-right= @book.materials
        %p.break-word Materials
    .card
      .clearfix
        %p.general-item-info.pull-right= @book.quantity
        %p.break-word Quantity