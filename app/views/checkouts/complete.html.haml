%main.container.general-main-wrap
  = render "checkout_status"
  .text-center.mb-40
    %h3.general-subtitle Thank You for your Order!
    %p.font-weight-light= "An order confirmation has been sent to " + @order.user.email
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0 Order #R25314582
        %p.general-address.mb-30= @order.created_at.strftime("%m/%d/%Y")
      %p.general-address
        = customer_name("shipping")
        %br
        = @order.get_address("type").address_name
        %br
        = @order.get_address("type").city
        %br
        = @order.get_address("type").country
        %br
        = "Phone " + @order.get_address("type").phone
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= "Order #" + @order.track_number
      %p.general-address.mb-30= @order.created_at.strftime("%m/%d/%Y")
  .visible-xs
    = render "mobile_items"
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        = render "items"
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render "summary"
  .text-center
    = link_to "Back to Store", category_path(1), class: "btn btn-default mb-20"