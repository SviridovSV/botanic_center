%main.container.general-main-wrap
  = render "checkout_status"
  %h3.general-subtitle Delivery
  = form_tag(wizard_path, method: :put) do
    .visible-xs
      = render "mobile_delivery_list"
    .hidden-xs.mb-res-50
      = render "delivery_list"
    .general-text-align
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Subtotal:
          %td
             %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Coupon:
          %td
            %p.font-16 €0.00
        %tr
          %td
            %strong.font-18 Order Total:
          %td
            %strong.font-18 €117.69
    .text-center
      = submit_tag "Save and Continue", class: "btn btn-default center-block mb-20"