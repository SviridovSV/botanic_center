.hidden-xs
  %ul.nav.navbar-nav
    %li.dropdown
      %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Home
      %ul.dropdown-menu
        - categories_list.find_each(start: 2) do |category|
          %li
            = link_to root_path(category_id: category.id) do
              = category.title
      %li
        = link_to 'Shop', category_path(1)
    - if user_signed_in?
      %li.dropdown
        %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
        %ul.dropdown-menu
          %li
            = link_to "Orders", orders_path
          %li
            = link_to "Settings", edit_user_registration_path
          - if can? :access, :rails_admin
            %li
              = link_to 'Admin panel', rails_admin.dashboard_path
          %li.divider{role: "separator"}
          %li
            = link_to "Log out", destroy_user_session_path, method: :delete
    - else
      %li
        = link_to "Log in", new_user_session_path
      %li
        = link_to "Sign up", new_user_registration_path