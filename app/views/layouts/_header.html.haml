%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Botanic Center', root_path, class: 'navbar-brand'
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: "#"} Home
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: "#"} Mobile development
              %li
                %a.collapse-link{href: "#"} Photo
              %li
                %a.collapse-link{href: "#"} Web design
          %li
            %a{href: "#"} My account
      .hidden-xs
        %ul.nav.navbar-nav
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Home
            %ul.dropdown-menu
              - categories_list.each do |category|
                %li
                  = link_to root_path(category: category.id) do
                    = category.title
          %li
            = link_to 'Shop', books_path
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu
                %li
                  %a{href: "#"} Orders
                %li
                  %a{href: "#"} Settings
                %li.divider{role: "separator"}
                %li
                  = link_to "Log out", destroy_user_session_path, method: :delete
          - else
            %li
              = link_to "Log in", new_user_session_path
            %li
              = link_to "Sign up", new_user_registration_path

