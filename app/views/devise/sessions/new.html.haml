%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('login')
    = link_to user_facebook_omniauth_authorize_path, class: "general-login-icon" do
      %i.fa.fa-facebook-official
    %p.general-login-text= t('or')
  = render 'login_form'
  %p.general-sign-text.text-center
    = t('dont_have_account')
    = link_to t('signup'), new_registration_path(resource_name), class: 'in-gold-500'