%main.container
  .text-center
    %h1.mb-30= t('forgot')
    %p.general-password-text= t('instruction')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f|
    = devise_error_messages!
    .form-group.mb-25
      = f.email_field :email, autofocus: true, placeholder: t('email_placeholder'), class: "form-control", id: "email"
    = f.submit t('email_instruction'), class: "btn btn-default center-block mb-20"
    .text-center
      = link_to t('cancel'), new_session_path(resource_name), class: 'in-gold-500'