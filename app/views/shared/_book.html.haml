.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail{:class => "#{"disabled" if book.in_stock?}"}
      %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: "thumb-hover-link" do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          %a.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.general-title= book.title
    %p.font-16.in-gold-500= shifting_price_to_currency(book)
    %span.divider-sm
    %p.in-grey-600.small= book_authors(book)