.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail{class: "#{"disabled" unless book.in_stock?}"}
      = image_tag book.picture.thumb, class: 'img-shadow general-thumbnail-img', alt: "design-book"
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: "thumb-hover-link" do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          = form_for current_order.order_items.build, remote: true do |f|
            = f.hidden_field :book_id, value: book.id
            = f.hidden_field :quantity, value: 1
            = f.button "", class: "thumb-hover-link" do
              %i.fa.fa-shopping-cart.thumb-icon{'aria-hidden': "true"}
  .general-thumb-info
    %p.general-title= book.title
    %p.font-16.in-gold-500= shifting_price_to_currency(book.price)
    %span.divider-sm
    %p.in-grey-600.small= book.authors_list